@model CSM.Form100.Fields.WorkflowStatusField
@using CSM.Form100.Settings;

@{
    var settings = Model.PartFieldDefinition.Settings.GetModel<WorkflowStatusFieldSettings>();
}

<fieldset>
    <label for="@Html.FieldIdFor(m => m.Value)" @if(settings.Required) { <text>class="required"</text> }>@Model.DisplayName</label>
    @if(!settings.Disabled) {
        @Html.ValidationMessageFor(m => m.Value)
    }
    else {
         @Html.TextBoxFor(m => m.Value, new { disabled = "true" })
    }
    @if (HasText(settings.Hint)) {
    <span class="hint">@settings.Hint</span>
    }
</fieldset>